<div class="page-header">
  <%= link_to assignments_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <%= link_to @assignment, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Done
  <% end %>

  <%= link_to edit_assignment_path(@assignment), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show assignment</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @assignment.title %></dd>

  <dt>Details:</dt>
  <dd><%= @assignment.details %></dd>

  <dt>Due date:</dt>
  <dd><%= @assignment.due_date.strftime("%a, %m-%d-%Y at %H:%M") %></dd>

</dl>
